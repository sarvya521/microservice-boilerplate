root=true

[*]
end_of_line=lf
trim_trailing_whitespace=true
charset=utf-8
insert_final_newline=false
indent_style=space
indent_size=4

[{*.json}]
indent_style=space
indent_size=2

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[{*.ddl,*.sql}]
indent_style=space
indent_size=2

[*.{groovy,java,kt,xml}]
indent_style=space
indent_size=4
continuation_indent_size=8